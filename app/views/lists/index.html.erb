  <div class="header">
    <h1 class="text-center">List of Movies</h1>
  </div>

<div class= "flexbox">
  <% @lists.each do |list| %>
    <div class="card" style="width: 18rem;">
      <img class="card-img-top" src= <%= list.image %>  alt="Card image cap">
      <div class="card-body">
        <h5 class="card-title"> <%= list.name %></h5>
        <%= link_to "Go to list", list_path(list) %>
      </div>
    </div>
  <% end %>
</div>
  <div>
    <%= link_to "New List", new_list_path, class: "btn btn-primary" %>
  </div>
